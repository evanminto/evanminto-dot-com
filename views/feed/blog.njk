---
layout: false
permalink: feed/blog.xml
---

<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
  <channel>
    <title>{{ site.name }}</title>
    <link>{{ site.url }}</link>
    <description>{{ site.description }}</description>
    <language>en-us</language>

    {%- set reversed_posts = collections.published %}
    <lastBuildDate>{{ reversed_posts[0].date | date("YYYY-MM-DDTHH:mm:SS[Z]") }}</lastBuildDate>
    <atom:link href="{{ site.url }}/feed/blog.xml" rel="self" type="application/rss+xml" />

    {%- for post in collections.published %}
      <item>
        <title>{{ post.data.title }}</title>
        <link>{{ site.url }}{{ post.url }}</link>
        <pubDate>{{ post.date | date("YYYY-MM-DDTHH:mm:SS[Z]") }}</pubDate>
        <guid>{{ site.url }}{{ post.url }}</guid>
        <description><![CDATA[{{ post.templateContent | safe }}]]></description>
      </item>
    {% endfor -%}
  </channel>
</rss>
