---
layout: _landing_page

title: Posts

mainNav: true
mainNavOrder: 1
---

<ul class="l-grid l-grid--with-highlight">
  {% assign reversed_posts = collections.published | reverse %}
  {% for post in reversed_posts %}
    <li>
      <article class="m-card">
        <div class="m-summary">
          <header>
            <h2>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>

            <p>
              <time>{{ post.date | date: "%B %e, %Y" }}</time>
            </p>
          </header>

          <p>{{ post.data.description }}</p>
        </div>
      </article>
    </li>
  {% endfor %}
</ul>
